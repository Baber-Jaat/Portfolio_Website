@page
@{
    ViewBag.Title = "Contact";
}
<!-- Contact Us Section -->
<section id="contact" style="background-color: #f8f9fa; padding: 60px 0;">
    <div class="container">
        <!-- Section Heading -->
        <div class="row text-center mb-5">
            <div class="col-md-12">
                <h2 style="font-weight: bold; color: #333;">Contact Us</h2>
                <p style="color: #6c757d; font-size: 1.1rem;">
                    We would love to hear from you! Feel free to reach out to us with any questions or inquiries.
                </p>
            </div>
        </div>

        <!-- Contact Info -->
        <div class="row text-center">
            <div class="col-md-4">
                <div class="contact-info" style="background-color: #ffffff; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); transition: transform 0.3s;">
                    <i class="fas fa-map-marker-alt" style="font-size: 2rem; color: #007bff;"></i>
                    <h4 style="margin-top: 15px; color: #343a40;">Our Office</h4>
                    <p style="color: #6c757d;">1234, Main Street, City, Country</p>
                </div>
            </div>
            <div class="col-md-4">
                <a href="tel:+923105323245" style="text-decoration: none;">
                    <div class="contact-info" style="background-color: #ffffff; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); transition: transform 0.3s; text-align: center;">
                        <i class="fas fa-phone-alt" style="font-size: 2rem; color: #007bff;"></i>
                        <h4 style="margin-top: 15px; color: #343a40;">Call Us</h4>
                        <p style="color: #6c757d;">+92 310 5323245</p>
                    </div>
                </a>
            </div>


            <div class="col-md-4">
                <div class="contact-info" style="background-color: #ffffff; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); transition: transform 0.3s;">
                    <i class="fas fa-envelope" style="font-size: 2rem; color: #007bff;"></i>
                    <h4 style="margin-top: 15px; color: #343a40;">Email Us</h4>
                    <p style="color: #6c757d;">Jaatbaber@gmail.com</p>
                </div>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="row mt-5">
            <div class="col-md-12">
                <form method="post" action="/Home/Contact" style="background-color: #ffffff; padding: 30px; border-radius: 8px; box-shadow: 0 8px 16px rgba(0,0,0,0.1);">
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <input type="text" class="form-control" name="name" placeholder="Your Name" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <input type="email" class="form-control" name="email" placeholder="Your Email" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <input type="text" class="form-control" name="subject" placeholder="Subject" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <textarea class="form-control" name="message" placeholder="Your Message" rows="5" required></textarea>
                        </div>
                    </div>
                    <div class="form-row text-center">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                        </div>
                    </div>
                </form>


            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }


        <!-- Google Map -->
        <div class="row mt-5">
            <div class="col-md-12">
                <h3 class="text-center" style="color: #333; margin-bottom: 30px;">FIND US HERE</h3>
                <div class="map-container" style=" border-radius: 10px; overflow: hidden; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m10!1m8!1m3!1d1862.716270350222!2d73.06763460603221!3d33.709384491512004!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2s!4v1731580696784!5m2!1sen!2s" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>
