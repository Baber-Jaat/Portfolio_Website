@model IEnumerable<PortfolioWebsite.Models.PortfolioItem>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Projects</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <style>
        
        body {
            font-family: "Josefin Sans", sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        
        .hero-section {
            display: flex;
            justify-content: space-between;
            align-items: flex-end; 
            height: 90vh; 
            position: relative;
            background-color: #333; 
        }

        .container{
            max-width: 100% !important;
        }

        .hero-text {
            position: absolute;
            bottom: 20px; 
            left: 20px; 
            color: white;
            z-index: 2;
        }

            .hero-text h1, .hero-text h2 {
                margin: 20px;
            }

            .hero-text p {
                margin-top: 10px;
            }


        .hero-section .button {
            margin-left: 50px;
            padding: 10px 20px;
            border: 2px solid transparent;
            text-decoration: none;
            color: white;
            background-color: transparent;
            position: relative;
            overflow: hidden;
            text-transform: uppercase;
            transition: color 0.3s ease;
        }

            
            .hero-section .button::before, .hero-section .button::after {
                content: "";
                position: absolute;
                width: 25px;
                height: 2px;
                background-color: #00e6e6;
                transition: width 0.3s ease;
            }

            
            .hero-section .button::before {
                top: 0;
                left: 0;
            }

            
            .hero-section .button::after {
                bottom: 0;
                right: 0;
            }

            
            .hero-section .button:hover {
                color: white;
            }

                .hero-section .button:hover::before,
                .hero-section .button:hover::after {
                    width: 100%; 
                }

            
            .hero-section .button:active::before,
            .hero-section .button:active::after {
                width: 0; 
            }




        .banner_taital{
            width: 100%;
            float: left;
            font-size: 60px;
            text-transform: uppercase;
            color: #fefefd;
            font-weight: bold;
            line-height: 100px;
            padding-left: 50px;
            line-height: 70px;
        }

        .banner_text{
            margin-left: 20px;
            width: 100%;
            float: left;
            font-size: 24px;
            color: #fefefd;
            text-transform: uppercase;
            padding-left: 50px;
            padding-bottom: 20px;
        }


         .contact-section, .blog-section {
            padding: 60px 0;
        }

        

        .service-section {
            background-color: #0d0d3c;
            font-family: 'Poppins', sans-serif;
        }

        .services-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            margin-top: 1px;
            height: 450px;
        }

        .services-wrapper {
            display: flex;
            flex-wrap: wrap;
            gap: 50px;
        }

        

        .services-header {
            flex: 1;
            min-width: 300px;
            margin-left: 50px;
            margin-top: 60px;
        }

        .section-subtitle {
            color: #00e6e6;
            font-weight: bold;
            font-size: 18px;
            letter-spacing: 1px;
            margin-bottom: 10px;
        }

        .section-title {
            color: white;
            font-size: 38px;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .section-description {
            font-size: 16px;
            color: #b3b3b3;
            margin-bottom: 30px;
            max-width: 400px;
        }

        .btn-view-all {
            display: inline-block;
            color: #00e6e6; 
            font-weight: 600;
            text-transform: uppercase;
            text-decoration: none;
            font-size: 16px;
            letter-spacing: 1px;
            padding: 12px 30px;
            position: relative;
            background-color: transparent;
            overflow: hidden;
            cursor: pointer;
        }

            .btn-view-all::before,
            .btn-view-all::after,
            .btn-view-all .left-border,
            .btn-view-all .bottom-border {
                content: '';
                position: absolute;
                background-color: #00e6e6;
                transition: all 0.4s ease;
            }

            
            .btn-view-all::before {
                height: 2px;
                width: 50px;
                top: 0;
                left: 0;
            }

            
            .btn-view-all .left-border {
                width: 2px;
                height: 25px;
                left: 0;
                top: 0;
            }

            
            .btn-view-all::after {
                height: 25px; 
                width: 2px;
                bottom: 0; 
                right: 0;
            }

           
            .btn-view-all .bottom-border {
                width: 50px; 
                height: 2px;
                bottom: 0;
                right: 0; 
            }

            
            .btn-view-all:hover::before {
                width: 100%;
            }

            .btn-view-all:hover .left-border {
                height: 100%;
            }

            .btn-view-all:hover::after {
                height: 100%; 
            }

            .btn-view-all:hover .bottom-border {
                width: 100%; 
            }

            
            .btn-view-all:hover {
                color: #00e6e6;
            }



        a {
            text-decoration: none; 
        }

        
        .services-content {
            flex: 2;
            display: grid;
            margin-top: 40px;
            grid-template-columns: repeat(2, 1fr);
        }

        .service-item {
            padding: 10px;
            text-align: center;
            transition: transform 0.3s ease;
            display: block;
        }

            .service-item:hover {
                transform: translateY(-10px);
            }

        .service-icon {
            margin-bottom: 20px;
        }

            .service-icon img {
                width: 60px;
                height: 60px;
            }

        .service-title {
            font-size: 22px;
            font-weight: 600;
            color: #00e6e6;
            margin-bottom: 10px;
        }

        .service-description {
            color: #b3b3b3;
            font-size: 14px;
            line-height: 1.6;
        }





        .contact-form input, .contact-form textarea {
            width: 100%;
            margin-bottom: 15px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .btn-send {
            background-color: #f39c12;
            color: white;
            padding: 12px 25px;
            border: none;
            border-radius: 5px;
            font-size: 18px;
        }



        .portfolio-section {
            background-color: #cfd0ff;
            font-family: 'Poppins', sans-serif;
            height: 720px;
            margin-top: 5px;
            margin-bottom: 5px;
        }

        .portfolio-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            margin-top: 1px;
        }

        .section-title {
            font-size: 36px;
            font-weight: 700;
            margin-bottom: 20px;
            color: white;
        }


        .project-title{
            font-size: 36px;
            font-weight: 700;
            text-align: center;
            margin-bottom: 20px;
            color: #343a40;
            padding-top: 50px;
        }

        .section-description {
            text-align: center;
            font-size: 18px;
            color: #6c757d;
            max-width: 800px;
            margin: 0 auto 40px auto;
        }

        .portfolio-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .portfolio-item {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            text-align: center;
            transition: transform 0.3s ease;
        }

            .portfolio-item:hover {
                transform: translateY(-10px);
            }

        .portfolio-image-wrapper {
            overflow: hidden; 
            width: 100%; 
            height: 200px; 
            position: relative;
        }

        .portfolio-image {
            width: 100%;
            height: 220px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .portfolio-item:hover .portfolio-image {
            transform: scale(1.1);
        }


        .text-center{
            margin-top: 25px;
        }

        
        .btn-primary {
            background-color: #007bff;
            border: none;
            color: #fff;
            padding: 12px 30px;
            font-size: 16px;
            border-radius: 50px;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                transform: translateY(-5px);
            }



        .blog-card {
            background-color: #292929;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s, box-shadow 0.3s;
            margin-bottom: 30px;
            text-align: center;
            height: 180px;
        }

            .blog-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
            }

        .blog-date {
            font-size: 1.5rem;
            font-weight: bold;
            color: #ffcc00;
            margin-bottom: 15px;
        }

        .blog-excerpt {
            font-size: 1rem;
            color: #d3d3d3;
            line-height: 1.6;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            color: #ffffff;
        }




    </style>
</head>

<body>

   
    <section class="hero-section" >
        <img src="~/hero-1.jpg" alt="loading Image" style="height:auto; width:1325px" />
        <div class="hero-text">
            <h3 class="banner_text">
                Baber Ali JAAT
            </h3>
            <h1 class="banner_taital">UI/UX Designer's
                <br>
                Portfolio
            </h1>
            <p><a href="#portfolio" class="button">SEE MORE</a></p>
        </div>
    </section>


    <section id="services" class="service-section">
        <div class="services-container">
            <div class="services-wrapper">
                
                <div class="services-header">
                    <h4 class="section-subtitle">OUR SERVICES</h4>
                    <h2 class="section-title">WHAT WE DO?</h2>
                    <p class="section-description">
                        If you hire a Designer from our team, you'll get a professional Designer to make a custom Design for your business. Once the project is over, we ensure the best results.
                    </p>
                    <a href="#" class="btn-view-all">VIEW ALL SERVICES
                        <div class="left-border"></div>
                        <div class="bottom-border"></div>
                    </a>

                </div>


                <div class="services-content">
                    <a href="#">
                    <div class="service-item">
                        <div class="service-icon">
                            <img src="user-experience.png" alt="App Design" class="icon">
                        </div>
                        <h4 class="service-title">App Design</h4>
                        <p class="service-description">Creative and user-friendly mobile app design solutions.</p>
                    </div>
                    </a>


                    <a href="#">
                        <div class="service-item">
                        <div class="service-icon">
                            <img src="graphic-design.png" alt="Website Design" class="icon">
                        </div>
                        <h4 class="service-title">Website Design</h4>
                        <p class="service-description">Beautiful and responsive websites tailored to your needs.</p>
                    </div>
                    </a>


                    <a href="#">
                    <div class="service-item">
                        <div class="service-icon">
                            <img src="code.png" alt="HTML And CSS" class="icon">
                        </div>
                        <h4 class="service-title">HTML And CSS</h4>
                        <p class="service-description">Clean, semantic, and SEO-friendly code for your web pages.</p>
                        </div>
                    </a>


                    <a href="#">
                    <div class="service-item">
                        <div class="service-icon">
                            <img src="logo-design.png" alt="Logo Design" class="icon">
                        </div>
                        <h4 class="service-title">Logo Design</h4>
                        <p class="service-description">Unique and memorable logos to represent your brand.</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>






    <section id="portfolio" class="portfolio-section">
        <div class="portfolio-container">
           
            <h2 class="project-title">Delivered Projects</h2>
            <p class="section-description">
                Listed below are some of the most representative projects I've worked on.
                They range from basic web design for presentation sites to advanced web development for online shops.
            </p>

            
            <div class="row portfolio-grid">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item">
                        <div class="portfolio-image-wrapper">
                            <a href="@Url.Action("Index", "Portfolio", new { id = item.Id })">
                                <img src="@item.ImageUrl" alt="@item.Title" class="portfolio-image">
                            </a>
                        </div>
                    </div>
                }
            </div>



           
            <div class="text-center">
                <a href="#" class="btn btn-primary">See More</a>
            </div>
        </div>
    </section>



    <section id="blog" class="blog-section" style="background-color: #1a1a1a; color: white; padding: 50px 0; margin-bottom: -10px;">
        <div class="container">
            <h2 class="section-title text-center" style="font-size: 2.5rem; margin-bottom: 40px; font-weight: bold; color: #f8f9fa;">
                My Blog
            </h2>
            <div class="row">
                <div class="col-md-4">
                    <a href="#" class="blog-post" style="text-decoration: none; color: white;">
                        <div class="blog-card">
                            <h4 class="blog-date">April 15</h4>
                            <p class="blog-excerpt">
                                What Makes Users Want to Share a Video on Social Media?
                            </p>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="#" class="blog-post" style="text-decoration: none; color: white;">
                        <div class="blog-card">
                            <h4 class="blog-date">Jun 22</h4>
                            <p class="blog-excerpt">
                                Bumper Ads: How to Tell a Story in 6 Seconds
                            </p>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="#" class="blog-post" style="text-decoration: none; color: white;">
                        <div class="blog-card">
                            <h4 class="blog-date">Aug 01</h4>
                            <p class="blog-excerpt">
                                If you hire a Designer of our team you will get a professional team to make a custom video for your business and, once the project is over.
                            </p>
                        </div>
                    </a>
                </div>
            </div>
            <div class="text-center mt-4">
                <a href="#" class="btn btn-primary" style="padding: 12px 30px; border-radius: 50px; background-color: #007bff; border: none; transition: background-color 0.3s;">
                    Read More
                </a>
            </div>
        </div>
    </section>

   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
