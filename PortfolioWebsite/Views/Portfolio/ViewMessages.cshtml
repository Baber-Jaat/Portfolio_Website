@model IEnumerable<PortfolioWebsite.Models.ContactMessage>

@{
    ViewBag.Title = "View Messages";
}

<!-- Styles for the table and page -->
<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f8f9fa;
        padding: 30px;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        font-weight: bold;
        color: #007bff;
        margin-bottom: 30px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        overflow: hidden;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    table thead {
        color: #333;
    }

    table thead th {
        padding: 15px;
        text-align: left;
        font-weight: 600;
    }

    table tbody tr {
        transition: background-color 0.3s;
    }

    table tbody tr:hover {
        background-color: #f1f1f1;
    }

    table tbody td {
        padding: 15px;
        border-bottom: 1px solid #e0e0e0;
    }

    .no-messages {
        text-align: center;
        color: #6c757d;
        font-size: 1.1rem;
        margin-top: 30px;
    }

    .btn-back {
        margin-left: 30px;
        margin-top: 20px;
        text-transform: uppercase;
        padding: 10px 20px;
        
        border-radius: 5px;
        text-decoration: none;
        color: black; 
        background-color: transparent; 
        position: relative;
        overflow: hidden;
        transition: color 0.3s ease;
    }

        .btn-back::before, .btn-back::after {
        content: "";
        position: absolute;
        width: 0;
        height: 2px;
        background-color: darkblue;
        transition: width 0.3s ease;
    }

        .btn-back::before {
        top: 0;
        left: 0;
    }

        .btn-back::after {
        bottom: 0;
        right: 0;
    }

        .btn-back:hover {
        color: black;
    }

            .btn-back:hover::before, .btn-back:hover::after {
            width: 100%;
        }
</style>

<div class="container">
    <h2>Contact Us Messages</h2>

    @if (!Model.Any())
    {
        <div class="no-messages">
            No messages available at the moment.
        </div>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Subject</th>
                    <th>Message</th>
                    <th>Date Submitted</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var message in Model)
                {
                    <tr>
                        <td>@message.Name</td>
                        <td>@message.Email</td>
                        <td>@message.Subject</td>
                        <td>@message.Message</td>
                        <td>@message.DateSubmitted.ToString("yyyy-MM-dd HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div style="text-align: center; margin-top: 20px;">
        <a href="/Portfolio/Index" class="btn-back">Back to Home</a>
    </div>
</div>
